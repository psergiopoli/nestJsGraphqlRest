{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "@models": ["model"],
      "@models/*": ["model/*"],
      "@services": ["service"],
      "@services/*": ["service/*"],
      "@utils": ["util"],
      "@utils/*": ["util/*"],
      "@controllers": ["controller"],
      "@controllers/*": ["controller/*"],
      "@guards": ["guard"],
      "@guards/*": ["guard/*"],
      "@dtos": ["dto"],
      "@dtos/*": ["dto/*"],
      "@conf": ["conf"],
      "@conf/*": ["conf/*"],
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}
