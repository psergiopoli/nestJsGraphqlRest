{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "@models": ["src/model"],
      "@models/*": ["src/model/*"],
      "@services": ["src/service"],
      "@services/*": ["src/service/*"],
      "@utils": ["src/util"],
      "@utils/*": ["src/util/*"],
      "@controllers": ["src/controller"],
      "@controllers/*": ["src/controller/*"],
      "@guards": ["src/guard"],
      "@guards/*": ["src/guard/*"],
      "@dtos": ["src/dto"],
      "@dtos/*": ["src/dto/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}
